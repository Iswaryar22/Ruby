
<%= render 'shared/errors', obj: @user %>
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |detail| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= detail.label :username %>
                </div>
                <div class="control-label col-sm-8">
                    <%= detail.text_field :username, class: "form-control", placeholder: "Enter user name", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= detail.label :email %>
                </div>
                <div class="control-label col-sm-8">
                    <%= detail.email_field :email, class: "form-control", placeholder: "Enter email" %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= detail.label :password %>
                </div>
                <div class="control-label col-sm-8">
                    <%= detail.password_field :password, class: "form-control", placeholder: "Enter password" %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= detail.submit(@user.new_record? ? "Sign Up" : "Update My Account", class: 'btn btn-primary btn-lg') %>
                </div>
            </div>
        <% end %>
    </div>
</div>
