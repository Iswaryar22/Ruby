<h1>List of Articles</h1>

<p>
    <%= link_to "Create new article", new_article_path %>
</p>

<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
    </tr>
    <% @article.each do |list| %>
        <tr>
            <td>
                <%= list.title %>
            </td>
            <td>
                <%= list.description %>
            </td>
            <td>
                <%= link_to "Edit", edit_article_path(list) %>
            </td>
            <td>
                <%= link_to "Show", article_path(list) %>
            </td>
            <td>
                <%= link_to "Destroy", article_path(list), method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
        </tr>
    <% end %>
</table>